{% extends "layout.twig" %}

{% block content %}
    {% for blogPost in blogPosts %}
        <div class="blog-post">
            <p>
            <h2><a href="{{ 'detail/' | url }}{{ blogPost.title }}">{{ blogPost.title }}</a></h2>
            </p>
            <p>Jan 1, 2020 by <a href="">Mariana</a></p>
            {% if blogPost.img_url %}
                <div class="blog-post-image">
                    <img src="{{ blogPost.img_url }}" alt="">
                </div>
            {% endif %}
            <div class="blog-post-content">
                {{ blogPost.content }}
            </div>
        </div>
    {% endfor %}

    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            {% if page > 1 %}
                <li class="page-item enabled"><a class="page-link"href="{{ page - 1}}">Previous</a></li>
            {% else %}
                <li class="page-item disabled"><a class="page-link"href="#">Previous</a></li>
            {% endif %}


            {% for i in 1..totalPages %}
                {% if i == page %}
                    <li class="page-item active"><a class="page-link"href="{{i}}">{{i}}</a></li>
                {% else %}

                    <li class="page-item"><a class="page-link"href="{{i}}">{{i}}</a></li>
                {% endif %}
            {% endfor %}

            {% if page == totalPages %}
                <li class="page-item disabled"><a class="page-link"href="#">Next</a></li>
            {% else %}
                <li class="page-item enabled"><a class="page-link"href="{{page + 1}}">Next</a></li>
            {% endif %}

        </ul>
    </nav>
{% endblock %}


